//Addition of Two Numbers: Create a program that takes
// two numbers as input, adds them, and prints the result.
#include <stdio.h>

int main() {
    int x, y, z;

    
    printf("Enter the value of x: ");
    scanf("%d", &x);

 
    printf("Enter the value of y: ");
    scanf("%d", &y);

    
    z = x + y;


    printf("The sum of %d and %d is: %d\n", x, y, z);

    return 0;
}
