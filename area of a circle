#include <stdio.h>

int main() {
    float pi, radius, area_of_a_circle;

   
    pi = 3.14159;

    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

 
    area_of_a_circle = pi * radius * radius;

   
    printf("The area of the circle with radius %.2f is: %.2f\n", radius, area_of_a_circle);

    return 0;
}
